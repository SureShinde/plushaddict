<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpquickcart>
            <general>
                <enabled>1</enabled>
                <popup_effect>slide</popup_effect>
                <auto_open>1</auto_open>
                <show_coupon>1</show_coupon>
                <show_info>full</show_info>
                <fixed_icon>0</fixed_icon>
            </general>
            <design>
                <header_background>#1979c3</header_background>
                <header_text>#ffffff</header_text>
                <subtotal_background>#ffffff</subtotal_background>
                <subtotal_text>#333333</subtotal_text>
            </design>
        </mpquickcart>
    </default>
</config>
